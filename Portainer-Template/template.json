{
  "version": "3",
  "templates": [
    {
      "id": 1,
      "type": 1,
      "title": "IT-Tools",
      "name": "it-tools",
      "description": "Web-based tools for developers and IT professionals",
      "note": "Access the IT-Tools UI at http://[host]:8200",
      "categories": ["utilities", "networking"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/corentinth/it-tools/main/public/logo.svg",
      "image": "corentinth/it-tools:latest",
      "ports": ["8200:80/tcp"],
      "restart_policy": "unless-stopped"
    },
   {
      "type": 1,
      "title": "Immich (Web UI Only)",
      "name": "immich-web",
      "description": "Immich Web Interface â€” use this if Redis, Postgres, and Machine Learning containers are already running",
      "note": "Use only if full stack is already deployed. Access via http://[HOST]:2283",
      "platform": "linux",
      "logo": "https://github.com/immich-app/immich/raw/main/apps/immich/src/assets/immich-logo.png",
      "image": "ghcr.io/immich-app/immich-server:{{IMMICH_VERSION}}",
      "ports": ["2283:2283"],
      "volumes": [
        "{{UPLOAD_LOCATION}}:/usr/src/app/upload",
        "/etc/localtime:/etc/localtime:ro"
      ],
      "env": [
        {
          "name": "UPLOAD_LOCATION",
          "label": "Upload Library Path",
          "default": "./library"
        },
        {
          "name": "IMMICH_VERSION",
          "label": "Immich Version",
          "default": "release"
        }
      ],
      "restart_policy": "always",
      "webui": "http://[HOST]:2283"
    },
    {
      "type": 1,
      "title": "Immich (Full Stack)",
      "name": "immich",
      "description": "Self-hosted photo and video backup solution powered by machine learning",
      "note": "Stack deploys Immich server, Redis, Postgres, and machine-learning service. Web UI available at http://[HOST]:2283",
      "categories": ["media", "photos", "machine-learning"],
      "platform": "linux",
      "logo": "https://github.com/immich-app/immich/raw/main/apps/immich/src/assets/immich-logo.png",
      "stack": true,
      "compose": {
        "version": "3.8",
        "services": {
          "immich-server": {
            "container_name": "immich_server",
            "image": "ghcr.io/immich-app/immich-server:{{IMMICH_VERSION}}",
            "ports": ["2283:2283"],
            "volumes": [
              "{{UPLOAD_LOCATION}}:/usr/src/app/upload",
              "/etc/localtime:/etc/localtime:ro"
            ],
            "depends_on": ["redis", "database"]
          },
          "immich-machine-learning": {
            "container_name": "immich_machine_learning",
            "image": "ghcr.io/immich-app/immich-machine-learning:{{IMMICH_VERSION}}",
            "volumes": ["model-cache:/cache"]
          },
          "redis": {
            "container_name": "immich_redis",
            "image": "docker.io/valkey/valkey:8-bookworm@sha256:fec42f399876eb6faf9e008570597741c87ff7662a54185593e74b09ce83d177"
          },
          "database": {
            "container_name": "immich_postgres",
            "image": "ghcr.io/immich-app/postgres:14-vectorchord0.4.3-pgvectors0.2.0",
            "volumes": [
              "{{DB_DATA_LOCATION}}:/var/lib/postgresql/data"
            ],
            "environment": {
              "POSTGRES_PASSWORD": "{{DB_PASSWORD}}",
              "POSTGRES_USER": "{{DB_USERNAME}}",
              "POSTGRES_DB": "{{DB_DATABASE_NAME}}",
              "POSTGRES_INITDB_ARGS": "--data-checksums"
            }
          }
        },
        "volumes": {
          "model-cache": {}
        }
      },
      "env": [
        {
          "name": "UPLOAD_LOCATION",
          "label": "Upload Library Path",
          "default": "./library"
        },
        {
          "name": "DB_DATA_LOCATION",
          "label": "Postgres Data Path",
          "default": "./postgres"
        },
        {
          "name": "DB_PASSWORD",
          "label": "Database Password",
          "default": "postgres"
        },
        {
          "name": "DB_USERNAME",
          "label": "Database Username",
          "default": "postgres"
        },
        {
          "name": "DB_DATABASE_NAME",
          "label": "Database Name",
          "default": "immich"
        },
        {
          "name": "IMMICH_VERSION",
          "label": "Immich Version (e.g., release or v1.x.x)",
          "default": "release"
        }
      ]
    }
  ]
}
